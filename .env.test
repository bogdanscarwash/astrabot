# Test environment variables for Astrabot
# This file is used during testing to provide consistent test configuration

# Core Settings
YOUR_RECIPIENT_ID=2
DEBUG=true
LOG_LEVEL=DEBUG
TESTING=true

# API Keys (test values - not real keys)
OPENAI_API_KEY=sk-test123456789abcdef123456789abcdef
ANTHROPIC_API_KEY=sk-ant-test123456789abcdef123456789abcdef
HF_TOKEN=hf_test123456789abcdef123456789abcdef

# Feature Flags for Testing
ENABLE_IMAGE_PROCESSING=false
ENABLE_BATCH_PROCESSING=false
ENABLE_TWITTER_EXTRACTION=false
MAX_BATCH_SIZE=5

# Test Data Paths
DATA_DIR=./tests/fixtures
OUTPUT_DIR=./tests/output
CACHE_DIR=./tests/cache
LOG_DIR=./tests/logs

# Rate Limiting (relaxed for testing)
API_RATE_LIMIT=1000
API_RATE_WINDOW=60

# Privacy Settings
PRIVACY_FILTER_ENABLED=true
ANONYMIZE_LOGS=true
MASK_SENSITIVE_DATA=true

# Performance Settings
DIFFERENTIAL_PRIVACY_EPSILON=1.0
HASH_SALT=test_salt_for_testing