# Example environment variables for Astrabot
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control!

# API Keys
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Hugging Face Configuration
HF_TOKEN=your-huggingface-token-here
HF_USERNAME=your-huggingface-username

# Signal Backup Settings
SIGNAL_BACKUP_PATH=/path/to/signal/backup
SIGNAL_BACKUP_PASSWORD=your-backup-password
FLATFILES_PATH=./data/raw/signal-flatfiles/

# Model Configuration
ANTHROPIC_MODEL=claude-3-opus-20240229
OPENAI_MODEL=gpt-4o-mini
# Unsloth/Fine-tuning Model
MODEL_NAME=Qwen/Qwen2.5-3B
MODEL_ALIAS=Qwen2.5-3B
TRAINING_MODE=development

# Development Settings
DEBUG=false
LOG_LEVEL=INFO

# Paths
DATA_DIR=./data
OUTPUT_DIR=./outputs
LOG_FILE_PATH=./data/logs/astrabot.log

# Logging Configuration
MAX_LOG_FILE_SIZE_MB=10
LOG_BACKUP_COUNT=5

# Feature Flags
ENABLE_IMAGE_PROCESSING=true
ENABLE_BATCH_PROCESSING=true
MAX_BATCH_SIZE=10

# Rate Limiting
API_RATE_LIMIT=60
API_RATE_WINDOW=60

# Privacy Configuration
YOUR_RECIPIENT_ID=2
SELF_PHONE_NUMBER=+1234567890
BLOCKED_NUMBERS=+0987654321,+1122334455

# Training Configuration
MAX_EPOCHS=3
BATCH_SIZE=4
LEARNING_RATE=2e-4
MAX_SEQ_LENGTH=4096

# Optional: Nitter Instance (for Twitter extraction)
NITTER_INSTANCE=https://nitter.privacydev.net