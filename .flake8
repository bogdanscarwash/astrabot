[flake8]
max-line-length = 100
select = E,W,F,C
ignore = 
    E501,  # line too long (handled by black)
    W503,  # line break before binary operator
    E203,  # whitespace before ':' (conflicts with black)
    C901,  # too complex
    
exclude = 
    .git,
    __pycache__,
    .pytest_cache,
    .mypy_cache,
    .venv,
    venv,
    build,
    dist,
    *.egg-info,
    notebooks,
    docker,
    data,
    outputs

per-file-ignores =
    __init__.py:F401
    tests/*:F401,F811
    **/test_*.py:F401,F811
    conftest.py:F401
    
max-complexity = 12
doctests = True
statistics = True
count = True
show-source = True